<div class="col-md-4 col-sm-6 portfolio-item">
    <a href=<%="#portfolioModal#{puppy.id}" %> class="portfolio-link" data-toggle="modal">
        <div class="portfolio-hover">
            <div class="portfolio-hover-content">
                <i class="fa fa-plus fa-3x"></i>
            </div>
        </div>
        <%= image_tag attachment_url(puppy, :image, :fill, 800, 800, format: "jpg"), class: 'img-responsive' %>
    </a>
    <div class="portfolio-caption">
        <h4 class="text-midnight"><%= puppy.name %></h4>
        <p class="text-muted"><%= puppy.status %></p>
        <%= link_to 'edit', edit_puppy_path(puppy.id) if current_admin %>
    </div>
</div>
